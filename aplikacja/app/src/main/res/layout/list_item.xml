<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.projekt.fuelprice.viewmodels.GasStationListItemVM" />
        <import type="android.view.View"/>
        <import type="com.projekt.fuelprice.data.GasStation.FuelType" alias="FuelType" />
    </data>

    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:background = "@drawable/text_border">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:visibility="@{vm.nullItem ? View.INVISIBLE : View.VISIBLE}"
            android:src="@{vm.gasStation.logo}"
            tools:src="@drawable/nieoznakowana"/>

        <TextView
            android:id="@+id/tekst1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center|center_vertical"
            android:text="@{vm.nullItem ? @string/null_string : vm.formattedPrice()}"
            android:textStyle="bold"
            android:visibility="@{vm.nullItem ? View.INVISIBLE : View.VISIBLE}"
            tools:text="4.05 zÅ‚"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:src="@{vm.selectedFuelIcon}"
                android:visibility="@{vm.nullItem ? View.INVISIBLE : View.VISIBLE}"
                android:clickable="false"
                tools:src="@drawable/lpg"/>
        </FrameLayout>



        <TextView
            android:id="@+id/tekst2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center|center_vertical"
            android:textStyle="bold"
            android:visibility="@{vm.nullItem ? View.INVISIBLE : View.VISIBLE}"
            android:text="@{vm.nullItem ? @string/null_string : vm.formattedDistance()}"
            tools:text="6.55 km"/>


        <Button
            android:id="@+id/btn1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow_enable"
            android:visibility="@{vm.nullItem ? View.INVISIBLE : View.VISIBLE}"/>
    </LinearLayout>
</layout>

